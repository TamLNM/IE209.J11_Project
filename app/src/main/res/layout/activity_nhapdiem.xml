<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NhapDiemActivity"
    android:background="#f5f5f5"
    android:id="@+id/mh_nhapdiem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="NHẬP ĐIỂM"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="#003e52"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="Lớp: "
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spn_Lop"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="Môn học: "
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spn_MonHoc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="Học kỳ: "
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spn_HocKy"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="Năm học: "
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spn_NamHoc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="Loại điểm: "
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spn_LoaiDiem"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:text="TIẾP TỤC"
                android:id="@+id/btn_TiepTuc"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="20dp"
                android:background="@color/tab_background"
                android:textColor="#ffffff"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottomNavView_Bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tab_background"
                app:itemHorizontalTranslationEnabled="false"
                app:itemIconTint="@drawable/background_selector"
                app:itemTextColor="@drawable/background_selector"
                app:menu="@menu/menu_bottom_nav"
                tools:itemHorizontalTranslationEnabled="false"
                app:labelVisibilityMode="labeled"
                >

            </android.support.design.widget.BottomNavigationView>

        </RelativeLayout>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>