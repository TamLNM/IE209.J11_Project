<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MH_DanhSachLop"
    android:background="@color/background_layout"
    android:id="@+id/mh_themhs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/topBar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TIẾP NHẬN HỌC SINH"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="#003e52"
                android:textColor="#ffffff"/>
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.design.widget.AppBarLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/topBar"
            android:layout_above="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"

                android:orientation="vertical"
                android:paddingBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:paddingTop="50dp"
                    android:paddingBottom="30dp"
                    android:text="Tiếp nhận học sinh"
                    android:textColor="#126d09"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingHorizontal="20dp"
                        android:src="@drawable/ic_man" />

                    <EditText
                        android:id="@+id/txt_nhaphoten"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:hint="Họ và Tên" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingHorizontal="20dp"
                        android:src="@drawable/ic_calendar" />

                    <EditText
                        android:id="@+id/txt_nhapngaysinh"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:drawablePadding="40dp"

                        android:hint="Ngày sinh" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingHorizontal="20dp"
                        android:src="@drawable/ic_gender" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdo_nam"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                           />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Nam"
                            android:textSize="19dp"/>

                        <RadioButton
                            android:id="@+id/rdo_nu"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:layout_marginLeft="80dp"
                            android:layout_weight="1"
                           />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Nữ"
                            android:textSize="19dp"/>

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingHorizontal="20dp"
                        android:src="@drawable/ic_email" />

                    <EditText
                        android:id="@+id/txt_nhapemail"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"


                        android:hint="Email" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="0dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingHorizontal="20dp"
                        android:src="@drawable/ic_placeholder" />

                    <EditText
                        android:id="@+id/txt_nhapdiachi"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"


                        android:hint="Địa chỉ" />
                </LinearLayout>


                <Button
                    android:id="@+id/btn_themhs"
                    android:layout_width="300dp"
                    android:layout_height="40dp"

                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:background="@color/tab_background"
                    android:layout_marginBottom="20dp"
                    android:text="TIẾP THEO"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />





            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottomNavView_Bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tab_background"
                app:itemHorizontalTranslationEnabled="false"
                app:itemIconTint="@drawable/background_selector"
                app:itemTextColor="@drawable/background_selector"
                app:menu="@menu/menu_bottom_nav"
                tools:itemHorizontalTranslationEnabled="false"
                app:labelVisibilityMode="labeled"
                >

            </android.support.design.widget.BottomNavigationView>

        </RelativeLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
