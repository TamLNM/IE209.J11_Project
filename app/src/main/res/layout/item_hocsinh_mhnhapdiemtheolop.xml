<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/item_hocsinh_mhnhapdiemtheolop"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_STT"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="STT"/>

    <TextView
        android:id="@+id/tv_MSHS"
        android:textAlignment="center"
        android:layout_width="75dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="MSHS"/>

    <TextView
        android:id="@+id/tv_HoTenHS"
        android:textAlignment="center"
        android:layout_width="185dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"
        android:layout_height="wrap_content"
        android:text="HoTenHS"/>

    <EditText
        android:id="@+id/tv_nhapdiemso"
        android:inputType="number"

        android:layout_width="70dp"
        android:layout_marginLeft="320dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_Luu_MHNhapDiemTheoLop"
        android:layout_width="100dp"
        android:layout_height="35dp"
android:layout_below="@+id/tv_nhapdiemso"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="5dp"
        android:background="@color/tab_background"
        android:text="LÆ¯U"
        android:textColor="#ffffff" />
</RelativeLayout>
