<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/thongtinhs_fragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#003e52"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_hs1"
            android:layout_width="143dp"
            android:layout_height="146dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:src="@drawable/if_male3_403019" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_tenhs1"
            android:layout_gravity="center_horizontal"
            android:text="họ tên"
            android:textColor="#ffffff"
            android:padding="10dp"
            />


        <TextView
            android:id="@+id/txt_lop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_man"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="10a3"
            android:textAlignment="textStart"
            />
        <TextView
            android:id="@+id/txt_ngaysinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="ngaysinnh"
            android:textAlignment="textStart" />
        <TextView
            android:id="@+id/txt_gioitinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_gender"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="gioitinh"
            android:textAlignment="textStart" />
        <TextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="email"
            android:textAlignment="textStart" />
        <TextView
            android:id="@+id/txt_diachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_placeholder"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="diachi"
            android:textAlignment="textStart" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_xembangdiem"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@android:color/white"
            android:textColor="@android:color/darker_gray"
            android:text="XEM BẢNG ĐIỂM"

            />
    </LinearLayout>

</RelativeLayout>