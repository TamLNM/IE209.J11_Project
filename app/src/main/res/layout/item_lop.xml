<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@color/background_layout">

    <TextView
        android:id="@+id/tv_tenlop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:width="150dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_siso"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_siso"
        android:width="75dp"/>

    <TextView
        android:id="@+id/tv_sisonu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_sisonu"
        android:width="75dp"/>

    <TextView
        android:id="@+id/tv_sisonam"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_sisonam"
        android:width="75dp"/>

</LinearLayout>