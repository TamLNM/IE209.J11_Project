<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MH_ThayDoiQuyDinh"
    android:background="#f5f5f5"
    android:id="@+id/mh_setting">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="THAY ĐỔI QUY ĐỊNH"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="#003e52"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:text="Số lượng học sinh tối đa một lớp:"/>

            <EditText
                android:id="@+id/edt_SoHDToiDa"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:text="Điểm đạt môn:"/>

            <EditText
                android:id="@+id/edt_DiemDatMon"
                android:paddingBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_ThayDoiThongTinLop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#003e52"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="THAY ĐỔI THÔNG TIN LỚP"/>

            <Button
                android:id="@+id/btn_ThayDoiThongTinMonHoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#003e52"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="THAY ĐỔI THÔNG TIN MÔN HỌC"/>

            <Button
                android:id="@+id/btn_Luu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#003e52"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="LƯU"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/bottomNavView_Bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tab_background"
                app:itemHorizontalTranslationEnabled="false"
                app:itemIconTint="@drawable/background_selector"
                app:itemTextColor="@drawable/background_selector"
                app:menu="@menu/menu_bottom_nav"
                tools:itemHorizontalTranslationEnabled="false"
                app:labelVisibilityMode="labeled"
                >

            </android.support.design.widget.BottomNavigationView>

        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>